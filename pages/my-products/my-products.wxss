/* pages/my-products/my-products.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #E8F5E8 0%, #F0F8F0 100%);
  padding-bottom: 40rpx;
}

/* 头部区域 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10px);
}

.header-content {
  flex: 1;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #4CAF50;
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 16rpx 24rpx;
  background: rgba(76, 175, 80, 0.2);
  border-radius: 25rpx;
  backdrop-filter: blur(10px);
}

.action-icon {
  font-size: 32rpx;
  color: #4CAF50;
}

.action-text {
  font-size: 28rpx;
  color: #4CAF50;
}

/* 搜索和筛选区域 */
.search-section {
  padding: 0 40rpx 30rpx;
}

.search-bar {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.search-input-wrapper {
  flex: 1;
  position: relative;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 25rpx;
  padding: 0 50rpx 0 30rpx;
}

.search-input {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.search-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #999;
}

.filter-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  background: rgba(76, 175, 80, 0.2);
  border-radius: 25rpx;
  backdrop-filter: blur(10px);
}

.filter-icon {
  font-size: 32rpx;
  color: #4CAF50;
}

/* 筛选标签 */
.filter-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  align-items: center;
}

.filter-tag {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 10rpx 20rpx;
  background: rgba(76, 175, 80, 0.2);
  border-radius: 20rpx;
  backdrop-filter: blur(10px);
  font-size: 24rpx;
  color: #4CAF50;
}

.remove-icon {
  font-size: 28rpx;
  color: rgba(76, 175, 80, 0.8);
}

.clear-filters {
  padding: 10rpx 20rpx;
  background: rgba(76, 175, 80, 0.1);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: rgba(76, 175, 80, 0.8);
  border: 1rpx solid rgba(76, 175, 80, 0.3);
}

/* 统计信息 */
.stats-section {
  display: flex;
  justify-content: space-around;
  padding: 0 40rpx 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #4CAF50;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(76, 175, 80, 0.8);
}

/* 产品列表区域 */
.products-section {
  background: white;
  border-radius: 40rpx 40rpx 0 0;
  min-height: 60vh;
  padding: 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.empty-action {
  padding: 20rpx 40rpx;
  background: rgba(76, 175, 80, 0.7);
  color: white;
  border-radius: 25rpx;
  font-size: 28rpx;
}

/* 产品网格 */
.products-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.product-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.product-image-wrapper {
  position: relative;
  width: 100%;
  height: 200rpx;
}

.product-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-status {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  padding: 6rpx 12rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 10rpx;
}

.status-text {
  font-size: 20rpx;
  color: white;
}

.product-info {
  padding: 20rpx;
  padding-bottom: 60rpx;
}

.product-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-brand {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-category {
  font-size: 22rpx;
  color: #999;
  padding: 4rpx 8rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.product-date {
  font-size: 22rpx;
  color: #999;
}

.product-actions {
  position: absolute;
  bottom: 15rpx;
  right: 15rpx;
  display: flex;
  gap: 10rpx;
}

.action-btn-small {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50rpx;
  height: 50rpx;
  background: #f5f5f5;
  border-radius: 50%;
}

.action-btn-small.active {
  background: #ffebee;
}

.action-btn-small .action-icon {
  font-size: 24rpx;
}

/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.load-more-btn {
  padding: 20rpx 40rpx;
  background: #f5f5f5;
  border-radius: 25rpx;
  font-size: 28rpx;
  color: #666;
}

.loading-more {
  display: flex;
  align-items: center;
  gap: 15rpx;
  font-size: 28rpx;
  color: #999;
}

.loading-spinner-small {
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid #f3f3f3;
  border-top: 2rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

/* 添加弹窗 */
.add-modal {
  width: 80%;
  max-width: 600rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  padding: 40rpx;
}

.add-option {
  display: flex;
  align-items: center;
  gap: 30rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.add-option:last-child {
  border-bottom: none;
}

.option-icon {
  font-size: 48rpx;
  width: 80rpx;
  text-align: center;
}

.option-info {
  flex: 1;
}

.option-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.option-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.option-arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* 筛选弹窗 */
.filter-modal {
  width: 85%;
  max-width: 700rpx;
  max-height: 80vh;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.filter-modal .modal-content {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx 40rpx;
}

.filter-group {
  margin-bottom: 40rpx;
}

.filter-group:last-child {
  margin-bottom: 0;
}

.filter-group-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.filter-option {
  padding: 15rpx 25rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  border: 2rpx solid transparent;
}

.filter-option.active {
  background: #e3f2fd;
  color: #1976d2;
  border-color: #1976d2;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 40rpx;
  background: #f8f9fa;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  flex: 1;
  padding: 25rpx;
  border-radius: 15rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
}

.modal-btn.secondary {
  background: #f5f5f5;
  color: #666;
}

.modal-btn.primary {
  background: #667eea;
  color: white;
}

/* 菜单弹窗 */
.menu-modal {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  padding: 40rpx;
  z-index: 1001;
}

.menu-item {
  display: flex;
  align-items: center;
  gap: 30rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  width: 60rpx;
  text-align: center;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
}

/* 动画 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .products-grid {
    grid-template-columns: 1fr;
  }
  
  .header {
    padding: 40rpx 30rpx 30rpx;
  }
  
  .products-section {
    padding: 30rpx;
  }
}