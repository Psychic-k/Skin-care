/* 管理后台 - 产品数据上传页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 20rpx;
}

/* 页面头部 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #7f8c8d;
}

/* 上传方式选择 */
.upload-type-selector {
  display: flex;
  margin-bottom: 40rpx;
  background: white;
  border-radius: 20rpx;
  padding: 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.type-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  border-radius: 15rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.type-option.active {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 25rpx rgba(76, 175, 80, 0.3);
}

.type-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
}

.type-text {
  font-size: 32rpx;
  font-weight: 500;
}

/* 批量上传区域 */
.batch-upload-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 文件上传区域 */
.file-upload-area {
  margin-bottom: 40rpx;
}

.upload-zone {
  border: 3rpx dashed #4CAF50;
  border-radius: 20rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  background: #f8fff8;
  transition: all 0.3s ease;
}

.upload-zone:active {
  background: #f0f9f0;
  transform: scale(0.98);
}

.upload-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 36rpx;
  color: #4CAF50;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.upload-hint {
  font-size: 26rpx;
  color: #7f8c8d;
}

.template-download {
  text-align: center;
  margin-top: 30rpx;
}

.download-link {
  color: #3498db;
  font-size: 28rpx;
  text-decoration: underline;
}

/* 已选择文件 */
.selected-file {
  border: 2rpx solid #4CAF50;
  border-radius: 15rpx;
  padding: 30rpx;
  background: #f8fff8;
}

.file-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.file-icon {
  font-size: 50rpx;
  margin-right: 20rpx;
}

.file-details {
  flex: 1;
}

.file-name {
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.file-size {
  font-size: 24rpx;
  color: #7f8c8d;
}

.file-remove {
  font-size: 40rpx;
  color: #e74c3c;
  padding: 10rpx;
}

.upload-actions {
  margin-bottom: 30rpx;
}

.upload-btn {
  width: 100%;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  border: none;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.upload-btn.uploading {
  background: #bdc3c7;
}

/* 上传进度 */
.upload-progress {
  margin-bottom: 20rpx;
}

.progress-bar {
  height: 12rpx;
  background: #ecf0f1;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #45a049);
  transition: width 0.3s ease;
}

.progress-text {
  text-align: center;
  font-size: 26rpx;
  color: #4CAF50;
  font-weight: 500;
}

/* 上传结果 */
.upload-result {
  border-radius: 15rpx;
  padding: 30rpx;
  margin-top: 30rpx;
}

.result-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.result-header.success {
  background: #d4edda;
  border: 2rpx solid #c3e6cb;
  border-radius: 10rpx;
  padding: 20rpx;
}

.result-header.error {
  background: #f8d7da;
  border: 2rpx solid #f5c6cb;
  border-radius: 10rpx;
  padding: 20rpx;
}

.result-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.result-message {
  font-size: 32rpx;
  font-weight: 500;
}

.result-details {
  margin: 20rpx 0;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.detail-label {
  font-size: 28rpx;
  color: #2c3e50;
}

.detail-value.success {
  color: #27ae60;
  font-weight: 500;
}

.detail-value.error {
  color: #e74c3c;
  font-weight: 500;
}

.error-list {
  margin-top: 20rpx;
}

.error-title {
  font-size: 28rpx;
  color: #e74c3c;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.error-item {
  background: #fff5f5;
  border-left: 4rpx solid #e74c3c;
  padding: 15rpx;
  margin-bottom: 10rpx;
  border-radius: 0 8rpx 8rpx 0;
}

.error-row {
  font-size: 24rpx;
  color: #e74c3c;
  font-weight: 500;
}

.error-msg {
  font-size: 24rpx;
  color: #2c3e50;
  margin-left: 10rpx;
}

/* 单个产品添加区域 */
.single-add-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.product-form {
  width: 100%;
}

.form-section {
  margin-bottom: 50rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 3rpx solid #4CAF50;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #2c3e50;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  padding: 25rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 30rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #4CAF50;
  background: white;
}

.form-textarea {
  width: 100%;
  min-height: 150rpx;
  padding: 25rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 30rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.form-textarea:focus {
  border-color: #4CAF50;
  background: white;
}

/* 品牌选择器 */
.brand-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: #fafafa;
}

.brand-text {
  font-size: 30rpx;
  color: #2c3e50;
}

.brand-text.placeholder {
  color: #bdc3c7;
}

.selector-arrow {
  font-size: 24rpx;
  color: #7f8c8d;
}

/* 分类选择器 */
.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: #fafafa;
  font-size: 30rpx;
  color: #2c3e50;
}

.picker-arrow {
  font-size: 24rpx;
  color: #7f8c8d;
}

/* 复选框组 */
.checkbox-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.checkbox-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 25rpx;
  background: #fafafa;
  transition: all 0.3s ease;
}

.checkbox-item.selected {
  border-color: #4CAF50;
  background: #f8fff8;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 15rpx rgba(76, 175, 80, 0.2);
}

.checkbox-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.checkbox-text {
  font-size: 28rpx;
  color: #2c3e50;
}

/* 成分输入 */
.ingredient-input {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.ingredient-field {
  flex: 1;
  padding: 25rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 30rpx;
  background: #fafafa;
}

.add-ingredient-btn {
  padding: 25rpx 40rpx;
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.ingredient-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.ingredient-tag {
  display: flex;
  align-items: center;
  padding: 15rpx 25rpx;
  background: #e8f5e8;
  border: 2rpx solid #4CAF50;
  border-radius: 20rpx;
}

.ingredient-name {
  font-size: 26rpx;
  color: #2c3e50;
  margin-right: 10rpx;
}

.remove-ingredient {
  font-size: 32rpx;
  color: #e74c3c;
  font-weight: bold;
}

/* 图片上传 */
.image-upload {
  width: 200rpx;
  height: 200rpx;
  position: relative;
}

.image-preview {
  width: 100%;
  height: 100%;
  position: relative;
  border-radius: 15rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.image-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.image-preview:active .image-mask {
  opacity: 1;
}

.change-text {
  color: white;
  font-size: 24rpx;
}

.image-placeholder {
  width: 100%;
  height: 100%;
  border: 3rpx dashed #bdc3c7;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.placeholder-icon {
  font-size: 60rpx;
  color: #bdc3c7;
  margin-bottom: 10rpx;
}

.placeholder-text {
  font-size: 24rpx;
  color: #7f8c8d;
}

/* 验证错误 */
.validation-errors {
  background: #fff5f5;
  border: 2rpx solid #e74c3c;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.error-title {
  font-size: 28rpx;
  color: #e74c3c;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.error-item {
  margin-bottom: 10rpx;
}

.error-text {
  font-size: 26rpx;
  color: #e74c3c;
}

/* 表单操作按钮 */
.form-actions {
  display: flex;
  gap: 30rpx;
  margin-top: 50rpx;
}

.reset-btn {
  flex: 1;
  padding: 30rpx;
  background: #ecf0f1;
  color: #2c3e50;
  border: none;
  border-radius: 15rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.submit-btn {
  flex: 2;
  padding: 30rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  border: none;
  border-radius: 15rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* 品牌选择弹窗 */
.brand-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 30rpx 30rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.modal-close {
  font-size: 50rpx;
  color: #7f8c8d;
  padding: 10rpx;
}

.brand-list {
  flex: 1;
  padding: 20rpx;
}

.brand-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f8f9fa;
}

.brand-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}

.brand-name {
  font-size: 32rpx;
  color: #2c3e50;
}