/* 体验官中心页面样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部信息卡片 */
.header-card {
  background: #fff;
  border-radius: 0 0 24rpx 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 4rpx solid #4CAF50;
}

.user-details {
  flex: 1;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.level-badge {
  display: inline-flex;
  align-items: center;
  background: #e8f5e8;
  border-radius: 20rpx;
  padding: 6rpx 12rpx;
}

.level-icon {
  font-size: 24rpx;
  color: #4CAF50;
  margin-right: 6rpx;
}

.level-text {
  font-size: 24rpx;
  color: #4CAF50;
}

.share-btn {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f8f8;
  border-radius: 50%;
}

.share-icon {
  font-size: 32rpx;
  color: #666;
}

/* 积分进度 */
.points-progress {
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.current-points, .next-level {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.points-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #4CAF50;
}

.points-label, .next-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.next-points {
  font-size: 28rpx;
  color: #666;
}

.progress-bar {
  height: 16rpx;
  background: #e0e0e0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #8BC34A);
  border-radius: 8rpx;
}

.progress-actions {
  display: flex;
  justify-content: space-around;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: #fff;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.action-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}

/* 统计数据 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 标签页 */
.tabs {
  display: flex;
  background: #fff;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0;
  position: relative;
}

.tab-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.tab-name {
  font-size: 24rpx;
  color: #666;
}

.tab-item.active .tab-name {
  color: #4CAF50;
  font-weight: bold;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  width: 40rpx;
  height: 4rpx;
  background: #4CAF50;
  border-radius: 2rpx;
}

/* 内容滚动区域 */
.content-scroll {
  height: calc(100vh - 500rpx);
  padding: 0 20rpx 20rpx;
}

/* 任务中心 */
.task-center {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.task-tabs {
  display: flex;
  border-bottom: 1rpx solid #eee;
}

.task-tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
}

.task-tab.active {
  color: #4CAF50;
  font-weight: bold;
  border-bottom: 2rpx solid #4CAF50;
}

.task-list {
  padding: 20rpx;
}

.task-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.task-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.task-status {
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.status-pending {
  background: #f0f0f0;
  color: #999;
}

.status-progress {
  background: #e3f2fd;
  color: #2196F3;
}

.status-submitted {
  background: #fff3e0;
  color: #ff9800;
}

.status-completed {
  background: #e8f5e8;
  color: #4CAF50;
}

.status-expired {
  background: #ffebee;
  color: #f44336;
}

.task-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.task-info {
  display: flex;
  margin-bottom: 20rpx;
}

.task-points, .task-deadline {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}

.points-icon, .deadline-icon {
  font-size: 24rpx;
  margin-right: 6rpx;
}

.points-text, .deadline-text {
  font-size: 24rpx;
  color: #666;
}

.task-actions {
  display: flex;
  justify-content: flex-end;
}

.task-btn {
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  text-align: center;
}

.task-btn.accept {
  background: #4CAF50;
  color: #fff;
}

.task-btn.submit {
  background: #2196F3;
  color: #fff;
}

/* 积分记录 */
.points-records {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.record-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.record-info {
  flex: 1;
}

.record-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-points {
  font-size: 32rpx;
  font-weight: bold;
}

.point-increase {
  color: #4CAF50;
}

.point-decrease {
  color: #f44336;
}

/* 排行榜 */
.rankings {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.ranking-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.ranking-number {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f0f0;
  border-radius: 50%;
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.ranking-number.top-three {
  background: #fff3e0;
  color: #ff9800;
  font-size: 32rpx;
}

.ranking-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.ranking-info {
  flex: 1;
}

.ranking-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.ranking-level {
  font-size: 24rpx;
  color: #999;
}

.ranking-points {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.points-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #4CAF50;
}

.points-label {
  font-size: 22rpx;
  color: #999;
}

/* 我的报告 */
.my-reports {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.report-card {
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.report-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.report-status {
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.report-status.pending {
  background: #f0f0f0;
  color: #999;
}

.report-status.approved {
  background: #e8f5e8;
  color: #4CAF50;
}

.report-status.rejected {
  background: #ffebee;
  color: #f44336;
}

.report-content {
  margin-bottom: 16rpx;
}

.report-product {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.product-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.product-brand {
  font-size: 24rpx;
  color: #999;
}

.report-summary {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.report-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.report-time {
  font-size: 24rpx;
  color: #999;
}

.report-score {
  display: flex;
  align-items: center;
}

.score-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 8rpx;
}

.score-value {
  font-size: 26rpx;
  font-weight: bold;
  color: #ff9800;
}

/* 加载状态 */
.load-more {
  text-align: center;
  padding: 30rpx 0;
}

.load-text {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.empty-tip {
  font-size: 24rpx;
  color: #999;
  display: block;
}