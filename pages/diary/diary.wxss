  font-size: 32rpx;
  color: white;
  font-weight: bold;
}

.mood-stat-label {
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

.mood-stat-count {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

