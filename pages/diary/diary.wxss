  border: 2rpx solid #e0e0e0;
}

.day-date {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.day-item.has-record .day-date {
  color: #4CAF50;
  font-weight: bold;
}

.day-status {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.day-item.has-record .day-status {
  background: #4CAF50;
}

.day-item.no-record .day-status {
  background: #e0e0e0;
}

