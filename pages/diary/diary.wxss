  flex-direction: column;
  gap: 20rpx;
}

.product-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.product-name {
  font-size: 26rpx;
  color: #333;
