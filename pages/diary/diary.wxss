/* pages/diary/diary.wxss */
.diary-container {
  background-color: #f8f9fa;
  min-height: 100vh;
  position: relative;
}

/* 全局加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  animation: fadeIn 0.3s ease-in-out;
}

.loading-content {
  background: white;
  padding: 60rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 4rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 动画定义 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-10rpx); }
  60% { transform: translateY(-5rpx); }
}

/* 头部工具栏 */
.diary-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  /*background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);*/
  background-color: white;
  color: white;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #4CAF50;
}

.header-actions {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

/* 草稿指示器 */
.draft-indicator {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 25rpx;
  backdrop-filter: blur(10rpx);
  animation: bounce 2s infinite;
}

.draft-icon {
  font-size: 24rpx;
}

.draft-text {
  font-size: 24rpx;
  color: white;
}

/* 导出按钮 */
.export-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.export-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.export-icon {
  font-size: 28rpx;
  color: white;
}

.add-btn {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 15rpx rgba(76, 175, 80, 0.4);
  transition: all 0.3s ease;
}

.add-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(76, 175, 80, 0.4);
}

/* 视图模式切换 */
.view-mode-tabs {
  display: flex;
  background: white;
  border-bottom: 1rpx solid #eee;
}

.mode-tab {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.mode-tab.active {
  color: #4CAF50;
  font-weight: bold;
}

.mode-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #4CAF50;
  border-radius: 2rpx;
}

/* 筛选和排序栏 */
.filter-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: white;
  border-bottom: 1rpx solid #eee;
  font-size: 24rpx;
}

.filter-section, .sort-section {
  display: flex;
  align-items: center;
}

.filter-label, .sort-label {
  color: #666;
  margin-right: 20rpx;
}

.filter-options, .sort-options {
  display: flex;
  gap: 20rpx;
}

.filter-option, .sort-option {
  padding: 8rpx 16rpx;
  background: #f0f0f0;
  border-radius: 16rpx;
  color: #666;
}

.filter-option.active, .sort-option.active {
  background: #E8F5E8;
  color: #4CAF50;
}

/* 日记列表 */
