/* pages/product-detail/product-detail.wxss */

/* 通用样式 */
.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 产品图片区域 */
.image-section {
  position: relative;
  background: white;
}

.product-swiper {
  height: 750rpx;
}

.product-image {
  width: 100%;
  height: 100%;
}

.favorite-btn {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  z-index: 10;
}

.favorite-btn:active {
  transform: scale(0.95);
}

.favorite-btn.favorited {
  background: rgba(255, 71, 87, 0.1);
}

.favorite-icon {
  font-size: 36rpx;
}

/* 产品信息 */
.product-info {
  background: white;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.product-header {
  margin-bottom: 30rpx;
}

.product-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.product-english {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.product-brand {
  font-size: 26rpx;
  color: #007aff;
  font-weight: 500;
}

.product-price {
  display: flex;
  align-items: baseline;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.current-price {
  font-size: 48rpx;
  font-weight: 700;
  color: #ff4757;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

.discount {
  padding: 8rpx 16rpx;
  background: #ff4757;
  color: white;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.product-stats {
  display: flex;
  gap: 40rpx;
  margin-bottom: 30rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.stat-icon {
  font-size: 24rpx;
}

.stat-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.product-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.tag {
  padding: 12rpx 20rpx;
  border-radius: 25rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.category-tag {
  background: #e6f3ff;
  color: #007aff;
}

.skin-tag {
  background: #f0f8ff;
  color: #5a67d8;
}

.effect-tag {
  background: #f0fff4;
  color: #38a169;
}

/* 标签页导航 */
.tab-nav {
  background: white;
  display: flex;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  transition: all 0.3s ease;
  position: relative;
}

.tab-item.active {
  color: #007aff;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #007aff;
  border-radius: 2rpx;
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.tab-name {
  font-size: 24rpx;
  font-weight: 500;
}

/* 标签页内容 */
.tab-content {
  background: white;
  margin-bottom: 20rpx;
}

/* 产品详情标签页 */
.detail-tab {
  padding: 40rpx;
}

.detail-section {
  margin-bottom: 50rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 25rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: #007aff;
  border-radius: 3rpx;
}

.product-description {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
}

.spec-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.spec-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
}

.spec-label {
  font-size: 28rpx;
  color: #666;
  min-width: 120rpx;
}

.spec-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  padding: 20rpx;
  background: #f0f8ff;
  border-radius: 15rpx;
}

.feature-icon {
  font-size: 28rpx;
  margin-top: 2rpx;
}

.feature-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  flex: 1;
}

.usage-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.usage-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  padding: 20rpx;
  background: #fff5f5;
  border-radius: 15rpx;
}

.usage-step {
  font-size: 28rpx;
  font-weight: 600;
  color: #007aff;
  min-width: 40rpx;
}

.usage-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  flex: 1;
}

.precaution-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.precaution-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  padding: 20rpx;
  background: #fffbf0;
  border-radius: 15rpx;
}

.precaution-icon {
  font-size: 28rpx;
  margin-top: 2rpx;
}

.precaution-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  flex: 1;
}

/* 成分分析标签页 */
.ingredient-tab {
  padding: 40rpx;
}

.ingredient-stats {
  margin-bottom: 40rpx;
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.stats-total {
  font-size: 24rpx;
  color: #666;
}

.stats-chart {
  display: flex;
  gap: 40rpx;
  justify-content: center;
}

.stats-chart .stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  border-radius: 20rpx;
  flex: 1;
}

.stats-chart .stat-item.safe {
  background: #f0fff4;
}

.stats-chart .stat-item.caution {
  background: #fffbf0;
}

.stats-chart .stat-item.danger {
  background: #fff5f5;
}

.stats-chart .stat-number {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
}

.stats-chart .stat-item.safe .stat-number {
  color: #38a169;
}

.stats-chart .stat-item.caution .stat-number {
  color: #d69e2e;
}

.stats-chart .stat-item.danger .stat-number {
  color: #e53e3e;
}

.stats-chart .stat-label {
  font-size: 24rpx;
  color: #666;
}

.ingredient-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.ingredient-item {
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.ingredient-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.ingredient-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.ingredient-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.ingredient-concentration {
  font-size: 24rpx;
  color: #666;
  background: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.ingredient-english {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.ingredient-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.safety-level {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.safety-level.safe {
  background: #c6f6d5;
  color: #2f855a;
}

.safety-level.caution {
  background: #faf089;
  color: #b7791f;
}

.safety-level.danger {
  background: #fed7d7;
  color: #c53030;
}

.ingredient-function {
  font-size: 24rpx;
  color: #666;
}

.ingredient-effects {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.ingredient-effects .effect-tag {
  padding: 8rpx 16rpx;
  background: #e6f3ff;
  color: #007aff;
  border-radius: 20rpx;
  font-size: 20rpx;
}

/* 用户评价标签页 */
.review-tab {
  padding: 40rpx;
}

.review-summary {
  margin-bottom: 40rpx;
}

.rating-overview {
  display: flex;
  gap: 40rpx;
  padding: 40rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
}

.average-rating {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 200rpx;
}

.rating-number {
  font-size: 72rpx;
  font-weight: 700;
  color: #007aff;
  margin-bottom: 10rpx;
}

.rating-stars {
  display: flex;
  gap: 5rpx;
  margin-bottom: 10rpx;
}

.star {
  font-size: 24rpx;
  color: #ddd;
}

.star.filled {
  color: #ffa500;
}

.rating-count {
  font-size: 24rpx;
  color: #666;
}

.rating-distribution {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.rating-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.rating-label {
  font-size: 24rpx;
  color: #666;
  min-width: 60rpx;
}

.bar-container {
  flex: 1;
  height: 12rpx;
  background: #e0e0e0;
  border-radius: 6rpx;
  overflow: hidden;
}

.bar-fill {
  height: 100%;
  background: #007aff;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.rating-bar .rating-count {
  font-size: 24rpx;
  color: #666;
  min-width: 40rpx;
  text-align: right;
}

.review-filters {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
  overflow-x: auto;
}

.filter-item {
  padding: 15rpx 30rpx;
  background: #f0f0f0;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
  transition: all 0.3s ease;
}

.filter-item.active {
  background: #007aff;
  color: white;
}

.review-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.review-item {
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
}

.review-header {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #ddd;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.user-meta {
  display: flex;
  gap: 20rpx;
  font-size: 22rpx;
  color: #666;
}

.review-rating {
  display: flex;
  align-items: center;
}

.review-rating .stars {
  display: flex;
  gap: 2rpx;
}

.review-rating .star {
  font-size: 20rpx;
}

.review-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 20rpx;
}

.review-images {
  display: flex;
  gap: 15rpx;
  margin-bottom: 20rpx;
  overflow-x: auto;
}

.review-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 15rpx;
  background: #ddd;
  flex-shrink: 0;
}

.review-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.review-tag {
  padding: 8rpx 16rpx;
  background: #e6f3ff;
  color: #007aff;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.review-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 10rpx 20rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.like-btn {
  background: #f0f0f0;
  color: #666;
}

.like-btn.liked {
  background: #ffe6e6;
  color: #ff4757;
}

.action-icon {
  font-size: 20rpx;
}

.action-text {
  font-size: 22rpx;
}

.load-more-reviews {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.load-more-text {
  font-size: 28rpx;
  color: #007aff;
  padding: 20rpx 40rpx;
  border: 2rpx solid #007aff;
  border-radius: 30rpx;
}

/* 相关推荐标签页 */
.related-tab {
  padding: 40rpx;
}

.related-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.related-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.related-item {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 20rpx;
  transition: all 0.3s ease;
}

.related-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.related-image {
  width: 100%;
  height: 200rpx;
  border-radius: 15rpx;
  background: white;
  margin-bottom: 15rpx;
}

.related-info {
  padding: 10rpx 0;
}

.related-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.related-brand {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.related-price {
  display: flex;
  align-items: baseline;
  gap: 10rpx;
  margin-bottom: 10rpx;
}

.related-price .current-price {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff4757;
}

.related-price .original-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
}

.related-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.rating-icon {
  font-size: 20rpx;
  color: #ffa500;
}

.rating-value {
  font-size: 22rpx;
  color: #333;
}

.review-count {
  font-size: 20rpx;
  color: #666;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 1rpx solid #f0f0f0;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
  gap: 30rpx;
  z-index: 100;
}

.bar-actions {
  display: flex;
  gap: 40rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.action-item .action-icon {
  font-size: 32rpx;
}

.action-item .action-text {
  font-size: 20rpx;
  color: #666;
}

.bar-buttons {
  display: flex;
  gap: 20rpx;
  flex: 1;
}

.btn-secondary,
.btn-primary {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-secondary {
  background: #f8f9fa;
  color: #333;
  border: 2rpx solid #e0e0e0;
}

.btn-primary {
  background: #007aff;
  color: white;
}

.btn-secondary:active,
.btn-primary:active {
  transform: scale(0.98);
}

/* 弹窗通用样式 */
.ingredient-modal,
.sku-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.ingredient-modal.show,
.sku-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  max-height: 80vh;
  background: white;
  border-radius: 40rpx 40rpx 0 0;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.ingredient-modal.show .modal-content,
.sku-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.ingredient-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
}

.modal-body {
  flex: 1;
  padding: 40rpx;
  overflow-y: auto;
}

/* 成分详情弹窗 */
.ingredient-detail {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.detail-item {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.detail-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #666;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
}

.detail-value.description {
  line-height: 1.6;
}

.detail-value .effect-tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: #e6f3ff;
  color: #007aff;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

/* 规格选择弹窗 */
.sku-product-info {
  display: flex;
  gap: 30rpx;
  flex: 1;
}

.sku-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
  background: #f0f0f0;
}

.sku-info {
  flex: 1;
}

.sku-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.sku-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff4757;
  margin-bottom: 8rpx;
}

.sku-stock {
  font-size: 24rpx;
  color: #666;
}

.sku-section,
.quantity-section {
  margin-bottom: 40rpx;
}

.sku-title,
.quantity-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 25rpx;
}

.sku-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.sku-option {
  padding: 25rpx 30rpx;
  background: #f8f9fa;
  border: 2rpx solid transparent;
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.sku-option.selected {
  background: #e6f3ff;
  border-color: #007aff;
}

.sku-volume {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
