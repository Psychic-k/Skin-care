/* 个人中心页面样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #4CAF50, #8BC34A);
  margin: 20rpx;
  border-radius: 24rpx;
  padding: 30rpx;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.3);
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar-section {
  position: relative;
  margin-right: 24rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ff9800;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  font-weight: bold;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.user-level {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.level-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.level-text {
  font-size: 26rpx;
  margin-right: 20rpx;
}

.points-text {
  font-size: 24rpx;
  opacity: 0.9;
}

.vip-status {
  display: flex;
  align-items: center;
}

.vip-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.vip-text {
  font-size: 24rpx;
  opacity: 0.9;
}

.user-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.action-btn {
  margin-bottom: 12rpx;
}

.edit-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon {
  font-size: 28rpx;
}

.vip-btn {
  background: #ff9800;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
}

.action-text {
  font-size: 24rpx;
  font-weight: bold;
}

/* 统计数据 */
.stats-section {
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 24rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 功能菜单 */
.menu-section, .service-section {
  margin: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

.menu-list, .service-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.menu-item, .service-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child, .service-item:last-child {
  border-bottom: none;
}

.menu-icon, .service-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f8f8;
  border-radius: 16rpx;
  font-size: 36rpx;
  margin-right: 20rpx;
}

.menu-content, .service-content {
  flex: 1;
}

.menu-title, .service-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.menu-subtitle, .service-subtitle {
  font-size: 24rpx;
  color: #999;
}

.menu-arrow, .service-arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* VIP弹窗 */
.vip-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f0f0;
  border-radius: 50%;
  font-size: 32rpx;
  color: #666;
}

/* VIP特权 */
.vip-benefits {
  margin-bottom: 30rpx;
}

.benefits-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.benefit-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.benefit-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
}

.benefit-text {
  font-size: 26rpx;
  color: #666;
}

/* VIP套餐 */
.vip-plans {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.plan-item {
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid transparent;
}

.plan-item:active {
  border-color: #4CAF50;
  background: #f0f8f0;
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.plan-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.plan-duration {
  font-size: 24rpx;
  color: #999;
}

.plan-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.current-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-right: 12rpx;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.plan-benefits {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.benefit-tag {
  background: #e8f5e8;
  color: #4CAF50;
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
}