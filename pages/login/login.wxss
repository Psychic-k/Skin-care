/* 登录页面样式 */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #E8F5E8 0%, #F0F8F0 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
}

/* 品牌区域 */
.brand-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.brand-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.brand-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 10rpx;
}

.brand-slogan {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
}

/* 登录区域 */
.login-section {
  width: 100%;
  max-width: 600rpx;
  margin-bottom: 60rpx;
}

.login-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 10rpx;
}

.login-subtitle {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 60rpx;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  position: relative;
  overflow: hidden;
  padding: 0; /* 去除默认内边距，便于居中 */
}

/* 绝对居中按钮文字 */
.login-btn .btn-label {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  white-space: nowrap;
}

/* 将图标固定在左侧，避免影响整体居中 */
.btn-icon {
  position: absolute;
  left: 30rpx;
  width: 40rpx;
  height: 40rpx;
  margin: 0;
}

.login-btn text {
  flex: 1;
  text-align:center;
}

.login-btn::after {
  border: none;
}

.wechat-btn {
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.3);
}

.wechat-btn.loading {
  background: #cccccc;
  box-shadow: none;
}

.profile-btn {
  background: #ffffff;
  color: #4CAF50;
  border: 2rpx solid #4CAF50;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

/* 跳过登录 */
.skip-login {
  text-align: center;
  margin-top: 40rpx;
}

.skip-login text {
  font-size: 28rpx;
  color: #999999;
  text-decoration: underline;
}

/* 功能介绍 */
.features-section {
  width: 100%;
  max-width: 600rpx;
  margin-bottom: 60rpx;
}

.features-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 40rpx;
}

.feature-card {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f0f0f0;
}

.feature-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #E8F5E8 0%, #F0F8F0 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.feature-emoji {
  font-size: 36rpx;
}

.feature-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.feature-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.feature-note {
  font-size: 22rpx;
  color: #4CAF50;
  background: rgba(76, 175, 80, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  align-self: flex-start;
}

/* 隐私协议 */
.privacy-section {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  text-align: center;
}

.privacy-text {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
}

.privacy-link {
  color: #4CAF50;
  text-decoration: underline;
}

/* 按钮点击效果 */
.login-btn:active {
  transform: scale(0.98);
  transition: transform 0.1s;
}

/* 加载动画 */
.loading {
  position: relative;
}

.loading::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 40rpx;
  height: 40rpx;
  margin: -20rpx 0 0 -20rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 开发者模式弹窗样式 */
.dev-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.dev-modal-content {
  width: 80%;
  max-width: 500rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
}

.dev-modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 30rpx;
}

.dev-role-list {
  margin-bottom: 30rpx;
}

.dev-role-item {
  padding: 25rpx 20rpx;
  margin-bottom: 15rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.dev-role-item:active {
  background: #e3f2fd;
  border-color: #2196F3;
  transform: scale(0.98);
}

.role-name {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 5rpx;
}

.role-desc {
  display: block;
  font-size: 24rpx;
  color: #666666;
}

.dev-modal-close {
  width: 100%;
  padding: 20rpx;
  background: #f5f5f5;
  color: #666666;
  text-align: center;
  border-radius: 12rpx;
  font-size: 28rpx;
  transition: background 0.3s ease;
}

.dev-modal-close:active {
  background: #e0e0e0;
}