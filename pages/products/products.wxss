/* pages/products/products.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #E8F5E8 0%, #F0F8F0 100%);
}

/* 页面头部 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.search-btn, .filter-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.search-btn:active, .filter-btn:active {
  background: #e9ecef;
  transform: scale(0.95);
}

.icon {
  font-size: 32rpx;
}

/* 搜索栏 */
.search-bar {
  background: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  transform: translateY(-100%);
  transition: transform 0.3s ease;
}

.search-bar.show {
  transform: translateY(0);
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 35rpx;
  font-size: 28rpx;
  background: #f8f9fa;
}

.search-actions {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.search-btn, .cancel-btn {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-btn {
  background: #007bff;
  color: #fff;
}

.cancel-btn {
  background: #6c757d;
  color: #fff;
}

/* 搜索建议 */
.search-suggestions {
  background: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.suggestion-section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.clear-btn {
  font-size: 24rpx;
  color: #6c757d;
  padding: 5rpx 10rpx;
}

.hot-searches {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.hot-search-item {
  padding: 10rpx 20rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #495057;
  transition: all 0.3s ease;
}

.hot-search-item:active {
  background: #e9ecef;
  transform: scale(0.95);
}

.search-history {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.history-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f8f9fa;
}

.history-icon {
  font-size: 24rpx;
  color: #6c757d;
}

.history-text {
  font-size: 28rpx;
  color: #495057;
}

/* 标签页导航 */
.tab-nav {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 100rpx;
  z-index: 99;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #007bff;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #007bff;
  border-radius: 2rpx;
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 24rpx;
}

/* 工具栏 */
.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.sort-picker {
  display: flex;
  align-items: center;
}

.picker-display {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 10rpx 20rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.arrow {
  font-size: 20rpx;
  color: #6c757d;
}

.result-count {
  font-size: 24rpx;
  color: #6c757d;
}

/* 内容区域 */
.content {
  height: calc(100vh - 300rpx);
  padding: 20rpx 0rpx;
}

/* 加载和空状态 */
.loading, .empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-text, .empty-text {
  font-size: 28rpx;
  color: #6c757d;
  margin-top: 20rpx;
}

.empty-icon {
  font-size: 80rpx;
  opacity: 0.5;
}

/* 产品列表 */
.product-list {
  padding: 0 15rpx;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.product-item {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.product-item:active {
  transform: translateY(-5rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
}

.product-image-wrapper {
  position: relative;
  height: 300rpx;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-badges {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.badge {
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
  color: #fff;
}

.badge.new {
  background: #28a745;
}

.badge.hot {
  background: #dc3545;
}

.badge.discount {
  background: #fd7e14;
}

.favorite-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.favorite-btn.active {
  background: rgba(220, 53, 69, 0.1);
}

.favorite-icon {
  font-size: 28rpx;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-brand {
  font-size: 24rpx;
  color: #6c757d;
  margin-bottom: 8rpx;
}

.product-category {
  font-size: 22rpx;
  color: #adb5bd;
  margin-bottom: 10rpx;
}

.product-rating {
  display: flex;
  align-items: center;
  gap: 5rpx;
  margin-bottom: 10rpx;
}

.rating-stars {
  font-size: 20rpx;
}

.rating-score {
  font-size: 22rpx;
  color: #333;
}

.rating-count {
  font-size: 20rpx;
  color: #6c757d;
}

.product-price {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 10rpx;
}

.current-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #dc3545;
}

.original-price {
  font-size: 22rpx;
  color: #6c757d;
  text-decoration: line-through;
}

.product-effects {
  margin-top: 10rpx;
}

.effect-tag {
  display: inline-block;
  padding: 5rpx 10rpx;
  background: #e3f2fd;
  color: #1976d2;
  border-radius: 10rpx;
  font-size: 20rpx;
  margin-right: 8rpx;
}

/* 成分列表 */
.ingredient-list {
  padding: 0 15rpx;
}

.ingredient-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.ingredient-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.ingredient-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 25rpx rgba(0, 0, 0, 0.15);
}

.ingredient-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.ingredient-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.ingredient-english {
  font-size: 28rpx;
  color: #6c757d;
  word-break: break-all;
  overflow-wrap: break-word;
}

.ingredient-safety {
  margin-bottom: 15rpx;
}

.safety-level {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 10rpx 15rpx;
  border-radius: 15rpx;
  background: #d4edda;
}

.safety-level.warning {
  background: #fff3cd;
}

.safety-icon {
  font-size: 24rpx;
}

.safety-text {
  font-size: 24rpx;
  color: #155724;
}

.safety-level.warning .safety-text {
  color: #856404;
}

.ingredient-effects {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.ingredient-description {
  font-size: 26rpx;
  color: #495057;
  line-height: 1.5;
}

/* 品牌列表 */
.brand-list {
  padding: 0 15rpx;
}

.brand-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.brand-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  display: flex;
  gap: 20rpx;
}

.brand-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 25rpx rgba(0, 0, 0, 0.15);
}

.brand-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.logo-image {
  width: 100%;
  height: 100%;
}

.brand-info {
  flex: 1;
}

.brand-header {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 10rpx;
}

.brand-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.brand-english {
  font-size: 24rpx;
  color: #6c757d;
}

.popular-badge {
  padding: 5rpx 10rpx;
  background: #dc3545;
  color: #fff;
  border-radius: 10rpx;
  font-size: 20rpx;
}

.brand-meta {
  display: flex;
  gap: 20rpx;
  margin-bottom: 10rpx;
}

.brand-country, .brand-founded {
  font-size: 24rpx;
  color: #6c757d;
}

.brand-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.product-count {
  font-size: 24rpx;
  color: #495057;
}

.brand-rating {
  display: flex;
  align-items: center;
  gap: 5rpx;
}

.brand-description {
  font-size: 26rpx;
  color: #495057;
  line-height: 1.5;
}

/* 收藏列表 */
.favorite-list {
  padding: 0 15rpx;
}

.favorite-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.favorite-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  gap: 20rpx;
  transition: all 0.3s ease;
}

.favorite-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 25rpx rgba(0, 0, 0, 0.15);
}

.favorite-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
}

.favorite-info {
  flex: 1;
}

.favorite-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.favorite-brand {
  font-size: 24rpx;
  color: #6c757d;
  margin-bottom: 8rpx;
}

.favorite-price {
  font-size: 26rpx;
  font-weight: bold;
  color: #dc3545;
}

.unfavorite-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.unfavorite-btn:active {
  background: #e9ecef;
  transform: scale(0.95);
}

.unfavorite-icon {
  font-size: 28rpx;
}

/* 筛选面板 */
.filter-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.filter-panel.show {
  opacity: 1;
  visibility: visible;
}

.filter-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.filter-content {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 600rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  transform: translateX(100%);
  transition: transform 0.3s ease;
}

.filter-panel.show .filter-content {
  transform: translateX(0);
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.filter-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.filter-reset {
  font-size: 28rpx;
  color: #007bff;
  padding: 10rpx;
}

.filter-body {
  flex: 1;
  padding: 20rpx 0;
}

.filter-section {
  margin-bottom: 40rpx;
}

.filter-section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  padding: 0 30rpx;
}

.filter-option {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 15rpx 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #495057;
  transition: all 0.3s ease;
}

.filter-option.active {
  border-color: #007bff;
  background: #e3f2fd;
  color: #1976d2;
}

.option-icon {
  font-size: 24rpx;
}

.filter-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.filter-cancel, .filter-confirm {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.filter-cancel {
  background: #f8f9fa;
  color: #495057;
}

.filter-confirm {
  background: #007bff;
  color: #fff;
}

/* 详情弹窗 */
.product-detail-modal, .ingredient-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.product-detail-modal.show, .ingredient-detail-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  max-height: 80vh;
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  box-sizing: border-box;
}

.product-detail-modal.show .modal-content,
.ingredient-detail-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 36rpx;
  color: #6c757d;
  padding: 10rpx;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
  overflow-y: auto;
  overflow-x: hidden;
}

.detail-image {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.detail-info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.detail-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.detail-brand {
  font-size: 28rpx;
  color: #6c757d;
}

.detail-rating {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.detail-price {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.detail-description {
  font-size: 28rpx;
  color: #495057;
  line-height: 1.6;
}

.detail-section {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.skin-type, .ingredient-tag {
  padding: 10rpx 15rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  font-size: 26rpx;
  color: #495057;
  align-self: flex-start;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.favorite-btn, .share-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.favorite-btn {
  background: #f8f9fa;
  color: #495057;
}

.favorite-btn.active {
  background: #dc3545;
  color: #fff;
}

.share-btn {
  background: #007bff;
  color: #fff;
}

/* 成分详情特殊样式 */
.ingredient-detail {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.ingredient-header {
  text-align: center;
}

.ingredient-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.ingredient-english {
  font-size: 28rpx;
  color: #6c757d;
  word-break: break-all;
  overflow-wrap: break-word;
}

.ingredient-safety {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
  flex-wrap: nowrap;
}

.safety-score {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  flex: 1;
}

.score-label {
  font-size: 24rpx;
  color: #6c757d;
  margin-bottom: 5rpx;
}

.score-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #28a745;
}

.effect-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.description-text, .usage-text, .precautions-text {
  font-size: 28rpx;
  color: #495057;
  line-height: 1.6;
  word-break: break-word;
  overflow-wrap: break-word;
}

/* 加载更多和无更多数据 */
.load-more, .no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.no-more-text {
  font-size: 24rpx;
  color: #adb5bd;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .product-grid {
    grid-template-columns: 1fr;
  }
  
  .filter-content {
    width: 100%;
  }
}