/* 产品知识库页面样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索区域 */
.search-section {
  background: #fff;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border-radius: 50rpx;
  padding: 0 20rpx;
  height: 80rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}

.search-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4CAF50;
  border-radius: 50%;
  margin-left: 20rpx;
}

.search-btn text {
  color: #fff;
  font-size: 24rpx;
}

/* 搜索建议 */
.search-suggestions {
  margin-top: 20rpx;
}

.suggestion-section {
  margin-bottom: 20rpx;
}

.suggestion-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.suggestion-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.suggestion-tag {
  padding: 8rpx 16rpx;
  background: #f0f0f0;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.suggestion-tag.hot {
  background: #fff3e0;
  color: #ff9800;
}

/* 标签页 */
.tabs {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #4CAF50;
  font-weight: bold;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #4CAF50;
  border-radius: 2rpx;
}

/* 筛选区域 */
.filter-section {
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.filter-scroll {
  white-space: nowrap;
  padding: 20rpx;
}

.filter-item {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: #f8f8f8;
  border-radius: 30rpx;
  margin-right: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.filter-icon {
  margin-left: 8rpx;
  font-size: 20rpx;
}

/* 内容滚动区域 */
.content-scroll {
  height: calc(100vh - 300rpx);
  padding: 20rpx;
}

/* 产品列表 */
.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.product-brand {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.product-price {
  font-size: 32rpx;
  color: #4CAF50;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.product-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.product-tag {
  padding: 4rpx 12rpx;
  background: #e8f5e8;
  color: #4CAF50;
  border-radius: 12rpx;
  font-size: 20rpx;
}

.product-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-left: 20rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f8f8f8;
}

.action-btn.favorite.active {
  background: #ffe8e8;
}

.action-icon {
  font-size: 24rpx;
}

/* 成分列表 */
.ingredient-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.ingredient-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.ingredient-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.ingredient-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.ingredient-safety {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}

.ingredient-safety.safe {
  background: #e8f5e8;
  color: #4CAF50;
}

.ingredient-safety.caution {
  background: #fff3e0;
  color: #ff9800;
}

.ingredient-safety.danger {
  background: #ffebee;
  color: #f44336;
}

.ingredient-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.ingredient-effects {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.effect-tag {
  padding: 6rpx 12rpx;
  background: #f0f7ff;
  color: #2196F3;
  border-radius: 12rpx;
  font-size: 20rpx;
}

/* 品牌列表 */
.brand-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.brand-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.brand-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.brand-info {
  flex: 1;
}

.brand-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.brand-description {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.brand-stats {
  display: flex;
  gap: 20rpx;
}

.stat-item {
  font-size: 22rpx;
  color: #999;
}

.brand-follow {
  margin-left: 20rpx;
}

.follow-btn {
  padding: 12rpx 24rpx;
  border: 2rpx solid #4CAF50;
  color: #4CAF50;
  border-radius: 30rpx;
  font-size: 24rpx;
  text-align: center;
}

.follow-btn.followed {
  background: #4CAF50;
  color: #fff;
}

/* 收藏列表 */
.favorite-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.favorite-tabs {
  display: flex;
  border-bottom: 1rpx solid #eee;
}

.favorite-tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 26rpx;
  color: #666;
}

.favorite-tab.active {
  color: #4CAF50;
  font-weight: bold;
  border-bottom: 2rpx solid #4CAF50;
}

.favorite-content {
  padding: 20rpx;
}

.favorite-products,
.favorite-ingredients,
.favorite-brands {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.product-card.small,
.ingredient-card.small,
.brand-card.small {
  padding: 16rpx;
}

.product-card.small .product-image {
  width: 100%;
  height: 120rpx;
  margin-right: 0;
  margin-bottom: 12rpx;
}

.brand-card.small {
  flex-direction: column;
  text-align: center;
}

.brand-card.small .brand-logo {
  margin: 0 0 12rpx 0;
}

/* 加载状态 */
.load-more,
.no-more {
  text-align: center;
  padding: 40rpx 0;
}

.load-text,
.no-more-text {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.empty-tip {
  font-size: 24rpx;
  color: #999;
  display: block;
}

/* 筛选弹窗 */
.filter-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.filter-content {
  background: #fff;
  width: 100%;
  max-height: 80vh;
  border-radius: 24rpx 24rpx 0 0;
  display: flex;
  flex-direction: column;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.filter-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.filter-close {
  font-size: 36rpx;
  color: #999;
}

.filter-body {
  flex: 1;
  padding: 0 30rpx;
}

.filter-group {
  margin: 30rpx 0;
}

.filter-group-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.filter-option {
  padding: 16rpx 24rpx;
  border: 2rpx solid #eee;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.filter-option.selected {
  border-color: #4CAF50;
  background: #e8f5e8;
  color: #4CAF50;
}

.filter-footer {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
  border-top: 1rpx solid #eee;
}

.filter-btn {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.filter-btn.reset {
  background: #f8f8f8;
  color: #666;
}

.filter-btn.confirm {
  background: #4CAF50;
  color: #fff;
}