/* pages/detection/detection.wxss */
.detection-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f0f9f0 0%, #e8f5e8 100%);
  padding: 20rpx;
}

/* 顶部导航 */
.header {
  text-align: center;
  padding: 40rpx 0;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2d5016;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 步骤指示器 */
.step-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx 0;
  padding: 0 40rpx;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #e0e0e0;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.step.active .step-number {
  background: #4CAF50;
  color: white;
}

.step-text {
  font-size: 22rpx;
  color: #999;
  transition: all 0.3s ease;
}

.step.active .step-text {
  color: #4CAF50;
  font-weight: bold;
}

.step-line {
  width: 80rpx;
  height: 4rpx;
  background: #e0e0e0;
  margin: 0 20rpx;
  transition: all 0.3s ease;
}

.step-line.active {
  background: #4CAF50;
}

/* 步骤内容 */
.step-content {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2d5016;
  margin-bottom: 30rpx;
  text-align: center;
}

/* 检测类型选择 */
.detection-types {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.type-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  position: relative;
  transition: all 0.3s ease;
}

.type-card.selected {
  border-color: #4CAF50;
  background: #f8fff8;
}

.type-icon {
  font-size: 48rpx;
  margin-right: 30rpx;
}

.type-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.type-desc {
  font-size: 24rpx;
  color: #666;
}

.type-check {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #4CAF50;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

/* 拍照指导 */
.guidelines {
  margin-bottom: 40rpx;
}

.guidelines-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2d5016;
  margin-bottom: 20rpx;
}

.guideline-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.guideline-dot {
  color: #4CAF50;
  font-weight: bold;
  margin-right: 15rpx;
  margin-top: 5rpx;
}

.guideline-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 最近检测 */
.recent-section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.view-all {
  font-size: 24rpx;
  color: #4CAF50;
}

.recent-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.recent-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.recent-date {
  font-size: 24rpx;
  color: #666;
}

.recent-type {
  font-size: 26rpx;
  color: #333;
}

.recent-score {
  font-size: 26rpx;
  color: #4CAF50;
  font-weight: bold;
}

/* 开始检测按钮 */
.action-buttons {
  text-align: center;
}

.start-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.start-btn::after {
  border: none;
}

/* 相机内容 */
.camera-content {
  padding: 0;
  background: black;
  border-radius: 20rpx;
  overflow: hidden;
}

.camera-container {
  position: relative;
  height: 80vh;
}

.camera {
  width: 100%;
  height: 100%;
}

/* 拍照框 */
.camera-frame {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 500rpx;
  height: 500rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
}

.frame-corner {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #4CAF50;
}

.frame-corner.tl {
  top: -6rpx;
  left: -6rpx;
  border-right: none;
  border-bottom: none;
  border-radius: 20rpx 0 0 0;
}

.frame-corner.tr {
  top: -6rpx;
  right: -6rpx;
  border-left: none;
  border-bottom: none;
  border-radius: 0 20rpx 0 0;
}

.frame-corner.bl {
  bottom: -6rpx;
  left: -6rpx;
  border-right: none;
  border-top: none;
  border-radius: 0 0 0 20rpx;
}

.frame-corner.br {
  bottom: -6rpx;
  right: -6rpx;
  border-left: none;
  border-top: none;
  border-radius: 0 0 20rpx 0;
}

/* 拍照提示 */
.camera-tips {
  position: absolute;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.6);
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
}

.tip-text {
  color: white;
  font-size: 26rpx;
  text-align: center;
}

/* 相机控制 */
.camera-controls {
  position: absolute;
  top: 100rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.control-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 拍照按钮 */
.photo-actions {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.8);
  padding: 40rpx;
}

.photo-btn-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.album-btn, .back-btn {
  width: 120rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 30rpx;
  font-size: 24rpx;
}

.album-btn::after, .back-btn::after {
  border: none;
}

.photo-btn {
  width: 120rpx;
  height: 120rpx;
  border: 6rpx solid white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.1);
}

.photo-btn-inner {
  width: 80rpx;
  height: 80rpx;
  background: white;
  border-radius: 50%;
}

/* AI分析中 */
.analyzing-content {
  text-align: center;
  padding: 80rpx 40rpx;
}

.analyzing-animation {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 60rpx;
  border: 4rpx solid #e0e0e0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scanning-line {
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  right: -4rpx;
  bottom: -4rpx;
  border: 4rpx solid transparent;
  border-top-color: #4CAF50;
  border-radius: 50%;
  animation: scan 2s linear infinite;
}

@keyframes scan {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.analyzing-icon {
  font-size: 80rpx;
}

.analyzing-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2d5016;
  margin-bottom: 20rpx;
}

.analyzing-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.analyzing-progress {
  margin-top: 40rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #e0e0e0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  width: 85%;
  height: 100%;
  background: linear-gradient(90deg, #4CAF50 0%, #45a049 100%);
  border-radius: 4rpx;
  animation: progress 3s ease-in-out infinite;
}

@keyframes progress {
  0%, 100% { width: 85%; }
  50% { width: 95%; }
}

.progress-text {
  font-size: 24rpx;
  color: #666;
}

/* 检测完成 */
.complete-content {
  text-align: center;
  padding: 80rpx 40rpx;
}

.complete-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.complete-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2d5016;
  margin-bottom: 20rpx;
}

.complete-desc {
  font-size: 26rpx;
  color: #666;
}