/* pages/detection/detection.wxss */
.detection-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #a8e6cf 0%, #4caf50 100%);
  position: relative;
}

/* 头部区域 */
.header {
  padding: 60px 30px 30px;
  text-align: center;
  position: relative;
  z-index: 1;
}

.header-title {
  font-size: 28px;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8px;
  letter-spacing: 1px;
}

.header-subtitle {
  font-size: 16px;
  color: rgba(255, 255, 255, 0.8);
}

/* 步骤指示器 */
.step-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
  margin-bottom: 20px;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 2;
}

.step-number {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 16px;
  margin-bottom: 8px;
  transition: all 0.3s ease;
}

.step.active .step-number {
  background: #ffffff;
  color: var(--primary-color);
  box-shadow: 0 4px 12px rgba(255, 255, 255, 0.3);
}

.step-text {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
}

.step.active .step-text {
  color: #ffffff;
  font-weight: 500;
}

.step-line {
  width: 60px;
  height: 2px;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 10px;
  margin-top: -20px;
  transition: all 0.3s ease;
}

.step-line.active {
  background: #ffffff;
}

/* 步骤内容 */
.step-content {
  background: #ffffff;
  border-radius: 30px 30px 0 0;
  min-height: calc(100vh - 200px);
  padding: 30px 20px;
  position: relative;
  z-index: 1;
}

.section-title {
  font-size: 22px;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 20px;
  text-align: center;
}

/* 检测类型选择 */
.detection-types {
  display: grid;
  grid-template-columns: 1fr;
  gap: 15px;
  margin-bottom: 30px;
}

.type-card {
  background: var(--background-card);
  border-radius: var(--border-radius-large);
  padding: 20px;
  border: 2px solid transparent;
  transition: all 0.3s ease;
  position: relative;
  box-shadow: var(--shadow-light);
}

.type-card:active {
  transform: scale(0.98);
}

.type-card.selected {
  border-color: var(--primary-color);
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
}

.type-icon {
  font-size: 40px;
  text-align: center;
  margin-bottom: 12px;
}

.type-name {
  font-size: 18px;
  font-weight: bold;
  color: var(--text-primary);
  text-align: center;
  margin-bottom: 8px;
}

.type-desc {
  font-size: 14px;
  color: var(--text-secondary);
  text-align: center;
  line-height: 1.4;
}

.type-check {
  position: absolute;
  top: 15px;
  right: 15px;
  width: 24px;
  height: 24px;
  background: var(--primary-color);
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  font-weight: bold;
}

/* 拍照指导 */
.guidelines {
  background: #f8f9fa;
  border-radius: var(--border-radius);
  padding: 20px;
  margin-bottom: 30px;
}

.guidelines-title {
  font-size: 16px;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 15px;
}

.guideline-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 10px;
}

.guideline-dot {
  color: var(--primary-color);
  font-weight: bold;
  margin-right: 10px;
  margin-top: 2px;
}

.guideline-text {
  font-size: 14px;
  color: var(--text-secondary);
  line-height: 1.4;
  flex: 1;
}

/* 最近检测 */
.recent-section {
  margin-bottom: 30px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.view-all {
  font-size: 14px;
  color: var(--primary-color);
  font-weight: 500;
}

.recent-list {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.recent-item {
  background: var(--background-card);
  border-radius: var(--border-radius);
  padding: 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: var(--shadow-light);
  transition: all 0.3s ease;
}

.recent-item:active {
  transform: scale(0.98);
}

.recent-date {
  font-size: 12px;
  color: var(--text-light);
}

.recent-type {
  font-size: 14px;
  color: var(--text-primary);
  font-weight: 500;
}

.recent-score {
  font-size: 16px;
  color: var(--primary-color);
  font-weight: bold;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 30px;
  left: 20px;
  right: 20px;
  z-index: 10;
}

.start-btn {
  width: 100%;
  background: var(--primary-gradient);
  color: #ffffff;
  border: none;
  border-radius: var(--border-radius-large);
  padding: 16px;
  font-size: 18px;
  font-weight: bold;
  box-shadow: var(--shadow-medium);
  transition: all 0.3s ease;
}

.start-btn:active {
  transform: translateY(2px);
  box-shadow: var(--shadow-light);
}

/* 相机内容 */
.camera-content {
  padding: 0;
  background: #000000;
  border-radius: 0;
}

.camera-container {
  position: relative;
  width: 100%;
  height: calc(100vh - 150px);
}

.camera {
  width: 100%;
  height: 100%;
}

.camera-frame {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 280px;
  height: 280px;
  z-index: 2;
}

.frame-corner {
  position: absolute;
  width: 30px;
  height: 30px;
  border: 3px solid #ffffff;
}

.frame-corner.tl {
  top: 0;
  left: 0;
  border-right: none;
  border-bottom: none;
}

.frame-corner.tr {
  top: 0;
  right: 0;
  border-left: none;
  border-bottom: none;
}

.frame-corner.bl {
  bottom: 0;
  left: 0;
  border-right: none;
  border-top: none;
}

.frame-corner.br {
  bottom: 0;
  right: 0;
  border-left: none;
  border-top: none;
}

.camera-tips {
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;
}

.tip-text {
  background: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  padding: 10px 20px;
  border-radius: 20px;
  font-size: 14px;
  text-align: center;
}

.camera-controls {
  position: absolute;
  top: 40px;
  right: 20px;
  display: flex;
  flex-direction: column;
  gap: 15px;
  z-index: 2;
}

.control-btn {
  width: 50px;
  height: 50px;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.control-btn:active {
  transform: scale(0.9);
}

.control-icon {
  width: 24px;
  height: 24px;
}

/* 拍照操作 */
.photo-actions {
  position: absolute;
  bottom: 40px;
  left: 0;
  right: 0;
  z-index: 2;
}

.photo-btn-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40px;
}

.album-btn,
.back-btn {
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 25px;
  padding: 12px 20px;
  font-size: 14px;
}

.photo-btn {
  width: 80px;
  height: 80px;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.photo-btn:active {
  transform: scale(0.9);
}

.photo-btn-inner {
  width: 60px;
  height: 60px;
  background: #ffffff;
  border-radius: 50%;
}

/* 分析中 */
.analyzing-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  min-height: 60vh;
}

.analyzing-animation {
  position: relative;
  width: 120px;
  height: 120px;
  margin-bottom: 40px;
}

.scanning-line {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: var(--primary-color);
  animation: scanning 2s ease-in-out infinite;
}

@keyframes scanning {
  0%, 100% {
    transform: translateY(0);
    opacity: 1;
  }
  50% {
    transform: translateY(120px);
    opacity: 0.3;
  }
}

.analyzing-icon {
  font-size: 60px;
  color: var(--primary-color);
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

.analyzing-text {
  margin-bottom: 40px;
}

.analyzing-title {
  font-size: 24px;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 10px;
}

.analyzing-desc {
  font-size: 16px;
  color: var(--text-secondary);
  line-height: 1.5;
}

.analyzing-progress {
  width: 100%;
  max-width: 300px;
}

.progress-bar {
  width: 100%;
  height: 6px;
  background: #e9ecef;
  border-radius: 3px;
  overflow: hidden;
  margin-bottom: 10px;
}

.progress-fill {
  height: 100%;
  background: var(--primary-gradient);
  border-radius: 3px;
  animation: progress 3s ease-in-out infinite;
}

@keyframes progress {
  0% {
    width: 0%;
  }
  100% {
    width: 85%;
  }
}

.progress-text {
  font-size: 14px;
  color: var(--text-secondary);
  text-align: center;
}

/* 完成状态 */
.complete-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  min-height: 60vh;
}

.complete-icon {
  font-size: 80px;
  margin-bottom: 30px;
  animation: bounce 0.6s ease-in-out;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-20px);
  }
  60% {
    transform: translateY(-10px);
  }
}

.complete-title {
  font-size: 28px;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 15px;
}

.complete-desc {
  font-size: 16px;
  color: var(--text-secondary);
  line-height: 1.5;
}