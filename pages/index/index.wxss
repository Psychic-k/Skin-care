/* index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #E8F5E8 0%, #F0F8F0 100%);
  position: relative;
  overflow: hidden;
}

/* 顶部装饰背景 */
.bg-decoration {
  position: absolute;
  top: -50px;
  right: -50px;
  width: 200px;
  height: 200px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  z-index: 0;
}

.bg-decoration::before {
  content: '';
  position: absolute;
  top: 100px;
  left: -100px;
  width: 150px;
  height: 150px;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
}

/* 头部区域 */
.header {
  padding: 60px 30px 40px;
  position: relative;
  z-index: 1;
}

.header-content {
  text-align: center;
  position: relative;
}

.title {
  display: block;
  font-size: 32px;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 8px;
  letter-spacing: 2px;
}

.subtitle {
  display: block;
  font-size: 16px;
  color: #4CAF50;
  margin-bottom: 20px;
}

.title-decoration {
  width: 60px;
  height: 4px;
  background: linear-gradient(90deg, #ff6b6b, #feca57);
  border-radius: 2px;
  margin: 0 auto;
}

/* 主要内容区域 */
.main-content {
  padding: 0 20px 40px;
  position: relative;
  z-index: 1;
}

/* 英雄卡片 */
.hero-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20px;
  padding: 25px;
  margin-bottom: 30px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.hero-card:active {
  transform: scale(0.98);
  box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
}

.hero-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.hero-icon {
  font-size: 40px;
  margin-right: 20px;
  background: linear-gradient(135deg, #a8e6cf, #4caf50);
  width: 60px;
  height: 60px;
  border-radius: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-text {
  flex: 1;
}

.hero-title {
  display: block;
  font-size: 20px;
  font-weight: bold;
  color: #333;
  margin-bottom: 5px;
}

.hero-desc {
  display: block;
  font-size: 14px;
  color: #666;
  line-height: 1.4;
}

.hero-arrow {
  font-size: 24px;
  color: #4caf50;
  font-weight: bold;
}

/* 功能网格 */
.features-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15px;
  margin-bottom: 30px;
}

.feature-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16px;
  padding: 20px;
  text-align: center;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.feature-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg, #ff6b6b, #feca57, #48dbfb, #ff9ff3);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.feature-card:active {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
}

.feature-card:active::before {
  opacity: 1;
}

.feature-icon {
  font-size: 32px;
  margin-bottom: 12px;
  display: block;
}

.feature-title {
  display: block;
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 5px;
}

.feature-desc {
  display: block;
  font-size: 12px;
  color: #888;
  line-height: 1.3;
}

/* 底部提示 */

.bottom-tip {
  text-align: center;
  padding: 20px 0;
}

.tip-text {
  font-size: 14px;
  color: #4CAF50;
  font-style: italic;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .hero-card {
    padding: 20px;
  }
  
  .hero-icon {
    width: 50px;
    height: 50px;
    font-size: 32px;
    margin-right: 15px;
  }
  
  .hero-title {
    font-size: 18px;
  }
  
  .features-grid {
    gap: 12px;
  }
  
  .feature-card {
    padding: 16px;
  }
}
