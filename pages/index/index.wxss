/* index.wxss */
.container {
  padding: 40rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666666;
}

.features {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.feature-item {
  background-color: #ffffff;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  border-left: 8rpx solid #4CAF50;
}

.feature-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 15rpx;
}

.feature-desc {
  display: block;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}
