.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff4757;
}

.product-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.rating-icon {
  font-size: 20rpx;
  color: #ffa500;
}

.rating-value {
  font-size: 24rpx;
  color: #666;
}