/* pages/brands/brands.wxss */

/* 通用样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #E8F5E8 0%, #F0F8F0 100%);
  padding-bottom: 20rpx;
}

/* 页面头部 */
.header {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  width: 80rpx;
  height: 80rpx;
  background: #f8f9fa;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
  background: #e9ecef;
}

.action-btn .icon {
  font-size: 32rpx;
}

/* 搜索栏 */
.search-bar {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-bottom: 1rpx solid #f0f0f0;
  padding: 0 40rpx;
  max-height: 0;
  overflow: hidden;
  transition: all 0.3s ease;
}

.search-bar.show {
  max-height: 800rpx;
  padding: 30rpx 40rpx;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 50rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.search-btn {
  width: 60rpx;
  height: 60rpx;
  background: #007aff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.search-btn .icon {
  color: white;
  font-size: 24rpx;
}

/* 搜索建议 */
.search-suggestions {
  margin-top: 20rpx;
}

.suggestion-section {
  margin-bottom: 40rpx;
}

.suggestion-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.suggestion-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
}

.clear-history {
  font-size: 24rpx;
  color: #007aff;
}

.suggestion-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.suggestion-tag {
  padding: 12rpx 24rpx;
  background: #f0f0f0;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
}

.suggestion-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  gap: 20rpx;
}

.suggestion-item .icon {
  font-size: 24rpx;
  color: #999;
}

.suggestion-item .text {
  font-size: 28rpx;
  color: #333;
}

/* 统计信息 */
.stats-section {
  padding: 30rpx 40rpx;
}

.stats-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #007aff;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 工具栏 */
.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  margin: 0 40rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.sort-section {
  display: flex;
  align-items: center;
}

.sort-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.sort-picker {
  background: #f8f9fa;
  border-radius: 30rpx;
  padding: 12rpx 24rpx;
}

.sort-value {
  font-size: 26rpx;
  color: #333;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.arrow {
  font-size: 20rpx;
  color: #999;
}

.result-count {
  font-size: 24rpx;
  color: #666;
}

/* 内容区域 */
.content {
  padding: 0 40rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 3rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

/* 品牌网格 */
.brand-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.brand-item {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.brand-item:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.brand-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.brand-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 15rpx;
  background: #f8f9fa;
}

.brand-country {
  font-size: 32rpx;
}

.brand-info {
  margin-bottom: 20rpx;
}

.brand-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.brand-english {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.brand-founded {
  font-size: 22rpx;
  color: #999;
}

.brand-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.stat {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat .icon {
  font-size: 20rpx;
}

.stat .value {
  font-size: 22rpx;
  color: #666;
}

.brand-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.tag {
  padding: 8rpx 16rpx;
  background: #f0f8ff;
  color: #007aff;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.brand-actions {
  display: flex;
  gap: 15rpx;
}

.brand-actions .action-btn {
  flex: 1;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  font-size: 22rpx;
}

.follow-btn {
  background: #f8f9fa;
  color: #666;
}

.follow-btn.followed {
  background: #ffe6e6;
  color: #ff4757;
}

.products-btn {
  background: #e6f3ff;
  color: #007aff;
}

.brand-actions .action-btn .icon {
  font-size: 20rpx;
}

.brand-actions .action-btn .text {
  font-size: 22rpx;
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  gap: 20rpx;
}

/* 筛选面板 */
.filter-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.filter-panel.show {
  opacity: 1;
  visibility: visible;
}

.filter-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.filter-content {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 600rpx;
  background: white;
  display: flex;
  flex-direction: column;
  transform: translateX(100%);
  transition: transform 0.3s ease;
}

.filter-panel.show .filter-content {
  transform: translateX(0);
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.filter-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
}

.filter-body {
  flex: 1;
  padding: 40rpx;
}

.filter-section {
  margin-bottom: 60rpx;
}

.filter-section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.filter-option {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 20rpx 30rpx;
  background: #f8f9fa;
  border-radius: 30rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.filter-option.active {
  background: #e6f3ff;
  border-color: #007aff;
}

.option-icon {
  font-size: 28rpx;
}

.option-label {
  font-size: 26rpx;
  color: #333;
}

.filter-footer {
  display: flex;
  gap: 30rpx;
  padding: 40rpx;
  border-top: 1rpx solid #f0f0f0;
}

.filter-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
}

.reset-btn {
  background: #f8f9fa;
  color: #666;
}

.confirm-btn {
  background: #007aff;
  color: white;
}

/* 品牌详情弹窗 */
