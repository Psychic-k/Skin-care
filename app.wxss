/**app.wxss**/
/* 全局样式重置 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  background-color: #f8f9fa;
  color: #333;
  line-height: 1.6;
}

/* 全局容器 */
.container {
  min-height: 100vh;
}

/* 全局色彩系统 */
:root {
  --primary-color: #667eea;
  --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --secondary-color: #764ba2;
  --accent-color: #ff6b6b;
  --success-color: #4CAF50;
  --warning-color: #feca57;
  --error-color: #ff4757;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-light: #999999;
  --background-light: #ffffff;
  --background-card: rgba(255, 255, 255, 0.95);
  --border-color: #e9ecef;
  --shadow-light: 0 2px 8px rgba(0, 0, 0, 0.1);
  --shadow-medium: 0 4px 16px rgba(0, 0, 0, 0.12);
  --shadow-heavy: 0 8px 32px rgba(0, 0, 0, 0.15);
  --border-radius: 12px;
  --border-radius-large: 20px;
}

/* 全局按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12px 24px;
  border-radius: var(--border-radius);
  font-size: 16px;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.btn-primary {
  background: var(--primary-gradient);
  color: #ffffff;
  box-shadow: var(--shadow-light);
}

.btn-primary:active {
  transform: translateY(1px);
  box-shadow: var(--shadow-medium);
}

.btn-secondary {
  background: var(--background-light);
  color: var(--primary-color);
  border: 1px solid var(--border-color);
}

.btn-secondary:active {
  background: #f8f9fa;
  transform: translateY(1px);
}

.btn-small {
  padding: 8px 16px;
  font-size: 14px;
}

.btn-large {
  padding: 16px 32px;
  font-size: 18px;
}

/* 全局卡片样式 */
.card {
  background: var(--background-card);
  border-radius: var(--border-radius-large);
  box-shadow: var(--shadow-light);
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
  overflow: hidden;
}

.card:active {
  transform: translateY(-2px);
  box-shadow: var(--shadow-medium);
}

.card-header {
  padding: 20px 20px 0;
  border-bottom: 1px solid var(--border-color);
  margin-bottom: 20px;
}

.card-body {
  padding: 20px;
}

.card-footer {
  padding: 0 20px 20px;
  border-top: 1px solid var(--border-color);
  margin-top: 20px;
}

/* 全局标题样式 */
.title-large {
  font-size: 28px;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 8px;
}

.title-medium {
  font-size: 22px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 6px;
}

.title-small {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4px;
}

.subtitle {
  font-size: 14px;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 全局间距系统 */
.m-0 { margin: 0; }
.m-1 { margin: 8px; }
.m-2 { margin: 16px; }
.m-3 { margin: 24px; }
.m-4 { margin: 32px; }

.mt-0 { margin-top: 0; }
.mt-1 { margin-top: 8px; }
.mt-2 { margin-top: 16px; }
.mt-3 { margin-top: 24px; }
.mt-4 { margin-top: 32px; }

.mb-0 { margin-bottom: 0; }
.mb-1 { margin-bottom: 8px; }
.mb-2 { margin-bottom: 16px; }
.mb-3 { margin-bottom: 24px; }
.mb-4 { margin-bottom: 32px; }

.p-0 { padding: 0; }
.p-1 { padding: 8px; }
.p-2 { padding: 16px; }
.p-3 { padding: 24px; }
.p-4 { padding: 32px; }

/* 全局布局工具类 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  align-items: center;
  justify-content: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-around {
  justify-content: space-around;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

/* 全局状态样式 */
.loading {
  opacity: 0.6;
  pointer-events: none;
}

.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.hidden {
  display: none;
}

/* 全局动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideIn {
  from {
    transform: translateX(-100%);
  }
  to {
    transform: translateX(0);
  }
}

.fade-in {
  animation: fadeIn 0.3s ease-out;
}

.slide-in {
  animation: slideIn 0.3s ease-out;
}

/* 全局表单样式 */
.form-group {
  margin-bottom: 20px;
}

.form-label {
  display: block;
  font-size: 14px;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8px;
}

.form-input {
  width: 100%;
  padding: 12px 16px;
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius);
  font-size: 16px;
  background: var(--background-light);
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

/* 全局标签样式 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 500;
  background: var(--border-color);
  color: var(--text-secondary);
}

.tag-primary {
  background: var(--primary-color);
  color: #ffffff;
}

.tag-success {
  background: var(--success-color);
  color: #ffffff;
}

.tag-warning {
  background: var(--warning-color);
  color: #ffffff;
}

.tag-error {
  background: var(--error-color);
  color: #ffffff;
}

/* 响应式断点 */
@media (max-width: 375px) {
  .title-large {
    font-size: 24px;
  }
  
  .title-medium {
    font-size: 20px;
  }
  
  .card-body {
    padding: 16px;
  }
  
  .btn {
    padding: 10px 20px;
    font-size: 14px;
  }
}