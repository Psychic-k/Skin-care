/* 皮肤检测组件样式 */
.skin-detector {
  position: relative;
  width: 100%;
  height: 100vh;
  background: #000;
  overflow: hidden;
}

/* 相机容器 */
.camera-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.camera {
  width: 100%;
  height: 100%;
}

/* 检测覆盖层 */
.detection-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

/* 检测区域 */
.detection-area {
  position: absolute;
  border: 4rpx solid rgba(76, 175, 80, 0.8);
  background: rgba(76, 175, 80, 0.1);
}

.detection-area.circle {
  border-radius: 50%;
}

.detection-area.square {
  border-radius: 24rpx;
}

.area-border {
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  right: -4rpx;
  bottom: -4rpx;
  border: 2rpx dashed rgba(255, 255, 255, 0.6);
  border-radius: inherit;
  animation: borderRotate 3s linear infinite;
}

@keyframes borderRotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 区域角标 */
.area-corners {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.corner {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border: 6rpx solid #4CAF50;
}

.corner.top-left {
  top: -6rpx;
  left: -6rpx;
  border-right: none;
  border-bottom: none;
}

.corner.top-right {
  top: -6rpx;
  right: -6rpx;
  border-left: none;
  border-bottom: none;
}

.corner.bottom-left {
  bottom: -6rpx;
  left: -6rpx;
  border-right: none;
  border-top: none;
}

.corner.bottom-right {
  bottom: -6rpx;
  right: -6rpx;
  border-left: none;
  border-top: none;
}

/* 检测指引 */
.detection-guide {
  position: absolute;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  color: #fff;
}

.guide-text {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
}

.guide-subtext {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
}

/* 图片预览 */
.image-preview {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
}

.preview-image {
  max-width: 100%;
  max-height: 100%;
}

.preview-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
}

.placeholder-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.placeholder-text {
  font-size: 28rpx;
}

/* 检测进度 */
.detection-progress {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
}

.progress-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.progress-circle {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.progress-fill {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: conic-gradient(#4CAF50 0deg, transparent 0deg);
  transition: transform 0.3s ease;
}

.progress-text {
  font-size: 36rpx;
  font-weight: bold;
  z-index: 1;
}

.progress-status {
  text-align: center;
}

.status-text {
  display: block;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.status-dots {
  display: flex;
  justify-content: center;
  gap: 8rpx;
}

.dot {
  font-size: 16rpx;
  animation: dotBlink 1.5s infinite;
}

.dot:nth-child(2) {
  animation-delay: 0.3s;
}

.dot:nth-child(3) {
  animation-delay: 0.6s;
}

@keyframes dotBlink {
  0%, 60%, 100% { opacity: 0.3; }
  30% { opacity: 1; }
}

/* 检测结果 */
.detection-result {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.result-score {
  font-size: 32rpx;
  font-weight: bold;
  color: #4CAF50;
}

.result-summary {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.summary-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.summary-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.result-details {
  margin-bottom: 30rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.detail-label {
  width: 120rpx;
  font-size: 26rpx;
  color: #666;
}

.detail-bar {
  flex: 1;
  height: 16rpx;
  background: #e0e0e0;
  border-radius: 8rpx;
  margin: 0 20rpx;
  overflow: hidden;
}

.bar-fill {
  height: 100%;
  background: #4CAF50;
  border-radius: 8rpx;
  transition: width 0.5s ease;
}

.bar-fill.sensitive {
  background: #ff9800;
}

.detail-value {
  width: 80rpx;
  text-align: right;
  font-size: 24rpx;
  color: #666;
}

/* 操作按钮 */
.action-buttons {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.detect-btn {
  width: 300rpx;
  height: 100rpx;
  background: #4CAF50;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.4);
}

.detect-btn.detecting {
  background: #999;
  box-shadow: none;
}

.detect-btn .btn-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.result-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  padding: 24rpx 48rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn.primary {
  background: #4CAF50;
}

.action-btn.secondary {
  background: #f0f0f0;
}

.action-btn.primary .btn-text {
  color: #fff;
}

.action-btn.secondary .btn-text {
  color: #666;
}

.action-btn .btn-text {
  font-size: 28rpx;
  font-weight: bold;
}

.mode-switch {
  padding: 16rpx 32rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  backdrop-filter: blur(10rpx);
}

.switch-text {
  font-size: 24rpx;
  color: #fff;
}

/* 指引按钮 */
.guide-btn {
  position: absolute;
  top: 100rpx;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.guide-icon {
  font-size: 32rpx;
  color: #fff;
}

/* 指引弹窗 */
.guide-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
}

.guide-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.guide-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.guide-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f0f0;
  border-radius: 50%;
  font-size: 32rpx;
  color: #666;
}

.guide-content {
  text-align: center;
  margin-bottom: 40rpx;
}

.guide-step {
  margin-bottom: 30rpx;
}

.step-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.step-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.step-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.guide-progress {
  display: flex;
  justify-content: center;
  gap: 16rpx;
}

.progress-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #e0e0e0;
  transition: background 0.3s ease;
}

.progress-dot.active {
  background: #4CAF50;
}

.guide-actions {
  text-align: center;
}

.guide-btn-next {
  width: 300rpx;
  height: 80rpx;
  background: #4CAF50;
  color: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin: 0 auto;
}